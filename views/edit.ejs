<%- include('assets/header') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Update Student</h2>

      <form method="POST" action="/student/update/<%= data._id %>">
        <div class="mt-3">
          <label for="name" class="from-label">Name</label>
          <input type="text" class="from-control" id="name" name="name" value="<%= data.name %>" />
        </div>
        <div class="mt-3">
          <label for="age" class="from-label">Age</label>
          <input type="text" class="from-control" id="age" name="age"value="<%= data.age %>" />
        </div>
        <div class="mt-3">
          <label for="fees" class="from-label">Fees</label>
          <input type="text" class="from-control" id="fees" name="fees" value="<%= data.fees %>" />
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
        <button type="submit" class="btn btn-secondery">Back to Home</button>
      </form>
    </div>
  </div>
</div>
<%- include('assets/footer') %>
