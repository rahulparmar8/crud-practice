<%- include('assets/navbar') %> <%- include('assets/header') %>

<div class="container">
  <div class="row" style="justify-content: center">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Update Student</h2>
      <form
        method="post"
        action="/student/update/<%= data._id %>/<%= current %>"
      >
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            id="name"
            name="name"
            type="text"
            class="form-control"
            autocomplete="off"
            value="<%= data.name %>"
          />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input
            id="age"
            name="age"
            type="text"
            class="form-control"
            autocomplete="off"
            value="<%= data.age %>"
          />
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input
            id="fees"
            name="fees"
            type="text"
            class="form-control"
            autocomplete="off"
            value="<%= data.fees %>"
          />
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
        <a href="/student/list/1" class="btn btn-primary">Back to Home</a>
      </form>
    </div>
  </div>
</div>

<%- include('assets/footer') %>
